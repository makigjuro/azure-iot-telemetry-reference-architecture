# Example Terraform Variables for Dev Environment
# Copy this file to terraform.tfvars and customize

# =============================================================================
# AZURE REGION
# =============================================================================
location = "eastus"  # Recommended: eastus, westus2, or northeurope (cheapest)

# =============================================================================
# UNIQUE SUFFIX (Required for globally unique resources)
# =============================================================================
# Add a 3-8 character suffix to avoid naming conflicts with Key Vault, Storage, etc.
# Use lowercase letters and numbers only
# Example: your initials + random numbers like "abc123" or "mjg456"
unique_suffix = "mg123"  # CHANGE THIS to something unique to you!

# =============================================================================
# DATABASE CREDENTIALS
# =============================================================================
postgres_admin_username = "psqladmin"
postgres_admin_password = "YourSecurePassword123!"  # Change this!

# =============================================================================
# CONTAINER IMAGES (Optional - Phase 2)
# =============================================================================
# Use default Microsoft sample images for now
# telemetry_processor_image = "youracr.azurecr.io/telemetry-processor:latest"
# alert_handler_image       = "youracr.azurecr.io/alert-handler:latest"
# event_subscriber_image    = "youracr.azurecr.io/event-subscriber:latest"
